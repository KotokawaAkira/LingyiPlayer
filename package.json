{
  "name": "musicplayervue",
  "author": {
    "name": "Lingyi",
    "email": "accelert123@gmail.com"
  },
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "fileAssociations": [
    {
      "ext": [
        "flac",
        "mp3",
        "wav"
      ]
    }
  ],
  "scripts": {
    "dev": "vite ",
    "build": "vue-tsc && vite build",
    "electron": "electron --js-flags\"--expose-gc\" .",
    "electron-build": "vue-tsc && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.lingyi.player",
    "productName": "Lingyi Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "src/assets/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/music-note.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/music-note.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Uninstall Lingyi Player",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/assets/music-note.png"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "ml-kmeans": "^6.0.0",
    "music-metadata-browser": "^2.5.10",
    "sortablejs": "^1.15.2",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/sortablejs": "^1.15.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "sass": "^1.77.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.6"
  }
}
